!!!
%html
  %head
    %title Foundry Xray

    = javascript_include_tag 'application'
    = stylesheet_link_tag 'app'

    :javascript
      window.data = #{File.read settings.json_location}
  %body
    .loading-screen 
      %h1.loading-screen-foundry Foundry X-ray
      %h2.loading-screen-loading Loading

      .loading-screen-copyright
        %img.evil_martians-logo{:src => '/assets/evil_martians_bw_logo.svg'}
        .loading-screen-copyright-label Evil Martians

    #layout
      #zoom
      %svg{:height => "0", :width => "0"}
        %defs
          %marker#arrowhead{:markerHeight => "5", :markerUnits => "strokeWidth", :markerWidth => "8", :orient => "auto", :refX => "8", :refY => "5", :style => "fill: #333", :viewBox => "0 0 10 10"}
            %path{:d => "M 0 0 L 10 5 L 0 10 z"}