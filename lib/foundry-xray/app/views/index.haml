!!!
%html
  %head
    %title Foundry Xray

    = javascript_include_tag 'application'
    = stylesheet_link_tag 'app'

    :javascript
      window.data = #{File.read settings.json_location}
  %body

    #toolbar
      #tools
        #functions
          %select
        #timeline
          .message
          .select
            .description
              %input{:type => 'text', :size => 2, :value => 0}
              of 132
            .slider
            %button
              &rarr;


      #logo
        %h1 Foundry X-Ray
        %h2 version: #{Foundry::Xray::VERSION}
        %img.evil_martians-logo{:src => '/assets/evil_martians_logo.svg'}
    %svg
      %defs
        %marker#arrowhead{:markerHeight => "5", :markerUnits => "strokeWidth", :markerWidth => "8", :orient => "auto", :refX => "8", :refY => "5", :style => "fill: #333", :viewBox => "0 0 10 10"}
          %path{:d => "M 0 0 L 10 5 L 0 10 z"}